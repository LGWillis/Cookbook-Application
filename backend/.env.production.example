# Django
DJANGO_SECRET_KEY=replace-with-strong-random
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=*
# Comma-separated list of frontend origins (include production URL)
FRONTEND_ORIGIN=https://your-frontend-url

# Database (Cloud SQL Postgres)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=cookbook
DB_USER=cookbook
DB_PASSWORD=replace-with-strong-password
# DB_HOST/PORT not needed when using Cloud SQL Unix socket
DB_HOST=
DB_PORT=
# Cloud SQL connection name: PROJECT:REGION:INSTANCE
CLOUD_SQL_CONNECTION_NAME=your-project:your-region:your-instance

# Media storage: GCS Fuse mount path in Cloud Run
DJANGO_MEDIA_ROOT=/media
